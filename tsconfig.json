{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
     "maxNodeModuleJsDepth": 1,
     "types" : [ "core-js", "mocha" ],
     "typeRoots": ["node_modules/@types"],
    "lib": [
      "es2015.promise",
      "dom",
      "es5"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
